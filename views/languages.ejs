<%- include('partials/header'); -%>
<div id="contact" class="contact">
    <div class="section-title" style="margin-top: 5%;">
        <h2>Register</h2>
        <p>Languages</p>
      </div>
    <div class="container">
        <form action="/experience" method="post" role="form" class="php-email-form">
            <div id="languageContainer">
                <div class="mb-4 ml-5">
                    <label class="form-label" id="language-label">Language</label>
                    <input type="text" name="language" class="form-control" id="language" aria-describedby="language" placeholder="Enter language" required>
                </div>
            </div>
            <div class="text-center">
                <button type="button" id="addLanguage">Add Another Language</button>
                <button type="submit">Next ></button></div>
          </form>
    </div>
    
  </div>

  <%- include('partials/footer'); -%>

  
  
  <script>
    $(document).ready(function () {
        var languageCounter = 1;
        $('#addLanguage').click(function () {
            languageCounter++;
            var newLanguage = $('#languageContainer').first().clone();
            newLanguage.find('input').val('');
            newLanguage.find('#language-label').text('Language ' + languageCounter);
            newLanguage.prepend('<hr class="hr" />');
            newLanguage.insertBefore($('.text-center'));
        });
    });
</script>
