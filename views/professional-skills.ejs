<%- include('partials/header'); -%>
<div id="contact" class="contact">
    <div class="section-title" style="margin-top: 5%;">
        <h2>Register</h2>
        <p>Professional Skills</p>
      </div>
    <div class="container">
        <form action="/languages" method="post" role="form" class="php-email-form">
            <div id="skillContainer">
                <div class="mb-4 ml-5">
                    <label class="form-label" id="skill-label">Skill</label>
                    <input type="text" name="skill" class="form-control" id="skill" aria-describedby="skill" placeholder="Example: MS Word/Excel/Python...etc." required>
                </div>
            </div>
            <div class="text-center">
                <button type="button" id="addSkill">Add Another Skill</button>
                <button type="submit">Next ></button></div>
          </form>
    </div>
    
  </div>

  <%- include('partials/footer'); -%>

  
  
  <script>
    $(document).ready(function () {
        var skillCounter = 1;
        $('#addSkill').click(function () {
            skillCounter++;
            var newSkill = $('#skillContainer').first().clone();
            newSkill.find('input').val('');
            newSkill.find('#skill-label').text('Skill ' + skillCounter);
            newSkill.prepend('<hr class="hr" />');
            newSkill.insertBefore($('.text-center'));
        });
    });
</script>
