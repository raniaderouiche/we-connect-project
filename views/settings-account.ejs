<%- include('partials/header'); -%>

<div class="row h-100">
    <div class="col-md-3 col-lg-3 d-flex">
        <%- include('partials/settings-sidebar'); -%>
    </div>

    <div class="col-md-9 col-lg-9 ">
        <div id="contact" class="contact">
            <div class="section-title" style="margin-top: 5%;">
                <h2>Settings</h2>
                <p>Account</p>
            </div>
            <div class="container">
                <form action="/update-password" method="POST" role="form" class="php-email-form">
                    <div class="form-group mt-3">
                        <label for="name" class="form-label">Old Password</label>
                        <input type="password" id="oldpassword" class="form-control mb-2" name="oldpassword" placeholder="Old Password" required>
                        <span>
                          <input class="form-check-input" type="checkbox" value="" id="toggleCheckbox1">
                          <label for="flexCheckDefault">
                            Show/Hide
                          </label>
                        </span>
                    </div>
                    <div class="form-group mt-3">
                        <label for="name" class="form-label">New Password</label>
                        <input type="password" id="newpassword" class="form-control mb-2" name="newpassword" placeholder="New Password" required>
                        <span>
                          <input class="form-check-input" type="checkbox" value="" id="toggleCheckbox2">
                          <label for="flexCheckDefault">
                            Show/Hide
                          </label>
                        </span>
                    </div>
                    <div class="form-group mt-3">
                        <label for="name" class="form-label">Confirm New Password</label>
                        <input type="password" id="confirmpassword" class="form-control mb-2" name="confirmpassword" placeholder="Confirm Password" required>
                        <span>
                          <input class="form-check-input" type="checkbox" value="" id="toggleCheckbox3">
                          <label for="flexCheckDefault">
                            Show/Hide
                          </label>
                        </span>
                    </div>
                    <div class="text-center">
                      <button type="submit">Save</button>
                    </div>
                  </form>
            </div>
            
          </div>
    </div>
</div>

  <%- include('partials/footer'); -%>

  <script>
    $(document).ready(function() {
    $('#toggleCheckbox1').on('change', function() {
        var passwordField = $('#oldpassword');
        
        // Check if the checkbox is checked
        var isChecked = $(this).prop('checked');
        
        // Toggle between password and text based on checkbox state
        if (isChecked) {
            passwordField.attr('type', 'text');
        } else {
            passwordField.attr('type', 'password');
        }
    });
});
$(document).ready(function() {
    $('#toggleCheckbox2').on('change', function() {
        var passwordField = $('#newpassword');
        
        // Check if the checkbox is checked
        var isChecked = $(this).prop('checked');
        
        // Toggle between password and text based on checkbox state
        if (isChecked) {
            passwordField.attr('type', 'text');
        } else {
            passwordField.attr('type', 'password');
        }
    });
});

$(document).ready(function() {
    $('#toggleCheckbox3').on('change', function() {
        var passwordField = $('#confirmpassword');
        
        // Check if the checkbox is checked
        var isChecked = $(this).prop('checked');
        
        // Toggle between password and text based on checkbox state
        if (isChecked) {
            passwordField.attr('type', 'text');
        } else {
            passwordField.attr('type', 'password');
        }
    });
});

  </script>