<%- include('partials/header-logged-in'); -%>


<div class="row">
  <div class="col-md-3 col-lg-3 d-flex">
      <%- include('partials/settings-sidebar'); -%>
  </div>

  <div class="col-md-9 col-lg-9 ">
      <div id="contact" class="contact">
          <div class="section-title" style="margin-top: 5%;">
              <h2>Register</h2>
              <p>Personal Information</p>
          </div>
          <div class="container">
              <form action="/update-personal-info" method="POST" role="form" class="php-email-form">
                  <div class="row">
                      <div class="form-group col-md-6">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" name="name" class="form-control" id="name" value="<%= user.name %>" placeholder="Full Name" required>
                      </div>
                      <div class="form-group col-md-6 mt-3 mt-md-0">
                          <label for="dob" class="form-label">Date of Birth</label>
                          <input id="dob" name="dob" class="form-control" value="<%= user.dob.substring(0, 10) %>" type="date" required/>
                      </div>
                      <div class="form-group col-md-6 mt-3 mt-md-0">
                          <label for="Gender" class="form-label">Gender</label>
                          <select class="form-select" name="gender" id="genderSelect" aria-label="Default select example" required>
                              <option>Select gender</option>
                              <option value="male" <% if (user.gender === 'male') { %> selected <% } %>>Male</option>
                              <option value="female" <% if (user.gender === 'female') { %> selected <% } %>>Female</option>
                          </select>
                      </div>
                      <div class="form-group col-md-6 mt-3 mt-md-0">
                          <label for="phone" class="form-label">Phone Number</label>
                          <input type="tel" class="form-control" name="phone" value="<%= user.phone %>" id="phone" placeholder="Enter your phone number" required>
                      </div>
      
                    </div>
                  <div class="form-group mt-3">
                      <label for="name" class="form-label">Address</label>
                      <input type="text" class="form-control" name="address" value="<%= user.address %>" id="address" placeholder="Address" required>
                  </div>
                  <div class="form-group mt-3">
                      <label for="exampleFormControlTextarea1">Bio</label>
                      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="bio"> <%= user.bio %></textarea>
                    </div>
                  <div class="form-group mt-3">
                    <label for="name" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>" placeholder="Email" required>
                  </div>
                  
                  <div class="text-center">
                    <button type="submit">Save</button>
                  </div>
                </form>
          </div>
          
        </div>
  </div>
</div>

  <%- include('partials/footer'); -%>
