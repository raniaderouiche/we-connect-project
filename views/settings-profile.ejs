<%- include('partials/header-logged-in'); -%>

<div class="row h-100">
    <div class="col-md-3 col-lg-3 d-flex">
        <%- include('partials/settings-sidebar'); -%>
    </div>

    <div class="col-md-9 col-lg-9 ">
        
        <div id="contact" class="contact">
            <div class="section-title" style="margin-top: 5%;">
                <h2>Settings</h2>
                <p>Profile</p>
            </div>
            <div class="container">
                <form action="/update-profile-picture" method="POST" role="form" class="php-email-form">
                    <div class="d-flex justify-content-center">
                        <div id="services" class="services col-md-3 col-lg-3 d-flex">
                            <div class="col-md-3 d-none d-md-block services flex-grow-1">
                                <div class="d-flex" data-aos="zoom-in" data-aos-delay="100">
                                    <div class="icon-box flex-grow-1">
                                        <div class=" align-items-center justify-content-center about-img mb-3">
                                            <img src="<%= user.image %>" class="img-fluid" alt="" data-aos="zoom-in" width="200"
                                                height="200">
                                        </div>
                    
                                    </div>
                    
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mt-3">
                      <label for="name" class="form-label">Select Photo</label>
                      <input type="file" accept="image/*" class="form-control form-control-lg" name="image" id="image" required>
                    </div>
                    <div class="text-center">
                      <button type="submit">Save</button>
                    </div>
                  </form>
            </div>
            
          </div>
    </div>
</div>

  <%- include('partials/footer'); -%>
